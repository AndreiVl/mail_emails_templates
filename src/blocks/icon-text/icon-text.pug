mixin icon-text(data)
	table(align="left" border="0" cellpadding="0" cellspacing="0" width="100%" style="max-width: 100%;")
		tr
			<!-- ID:BR TOUCH IMG -->
			td(align="left" height="15" valign="top" width="107" style="line-height: 0px;")
				img(src=image_path+data.img alt=data.alt width="82" height="82" style="display: block; width: 100%; max-width: 82px; height: auto; margin: 0; border: 0; padding: 0; outline: none;")
			td.lead.lead--white(valign="middle" align="left")!=data.text